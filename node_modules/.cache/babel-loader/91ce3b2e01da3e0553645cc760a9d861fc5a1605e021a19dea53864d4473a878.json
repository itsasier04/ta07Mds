{"ast":null,"code":"import \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.for-each.js\";\nimport \"core-js/modules/es.iterator.reduce.js\";\nimport consumiblesData from \"@/data/consumibles.json\";\nexport default {\n  data() {\n    return {\n      consumibles: consumiblesData.dades_mensuals\n    };\n  },\n  methods: {\n    calcularGastoTotal() {\n      return this.consumibles.reduce((total, item) => total + item.quantitat * item.preu_unitat, 0).toFixed(2);\n    },\n    usarPizarraElectronica() {\n      this.consumibles.forEach(item => {\n        if (this.esMaterialPizarra(item.nom)) {\n          item.quantitat = 0;\n        }\n      });\n    },\n    reducirConsumoPapel(index) {\n      if (this.consumibles[index].quantitat >= 10) {\n        this.consumibles[index].quantitat -= 10;\n      } else {\n        this.consumibles[index].quantitat = 0;\n      }\n    },\n    esMaterialPizarra(nombre) {\n      return nombre.toLowerCase().includes(\"marcador\") || nombre.toLowerCase().includes(\"borrador\");\n    },\n    esPapel(nombre) {\n      return nombre.toLowerCase().includes(\"papel\") && !nombre.toLowerCase().includes(\"wc\");\n    }\n  }\n};","map":{"version":3,"names":["consumiblesData","data","consumibles","dades_mensuals","methods","calcularGastoTotal","reduce","total","item","quantitat","preu_unitat","toFixed","usarPizarraElectronica","forEach","esMaterialPizarra","nom","reducirConsumoPapel","index","nombre","toLowerCase","includes","esPapel"],"sources":["/home/asier/calculadora-sostenible/src/views/CalculadoraConsumiblesView.vue"],"sourcesContent":["<template>\n    <div class=\"container\">\n      <main class=\"content\">\n        <h1>Consumo de Consumibles</h1>\n        <p><strong>Gasto mensual en consumibles:</strong> {{ calcularGastoTotal() }} €</p>\n        \n        <div class=\"data-card\" v-for=\"(item, index) in consumibles\" :key=\"index\">\n          <h2>{{ item.nom }}</h2>\n          <p><strong>Cantidad Mensual:</s